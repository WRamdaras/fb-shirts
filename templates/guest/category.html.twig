{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
    {% for category in categories %}
        <div class="card" style="width: 18rem;">
            <img src="{{ asset('/img/' ~ category.img) }}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{ category.name }}</h5>
                <p class="card-text">{{ category.description }}</p>
                <a href="{{ path('shirts', {id:category.id}) }}" class="btn btn-primary">Klik hier</a>
            </div>
        </div>
    {% endfor %}
</div>
</div>

{% endblock %}